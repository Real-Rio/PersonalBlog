---
import BaseHead from "../components/BaseHead.astro";
import BaseLayout from "./BaseLayout.astro";
// import Valine from "valine";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    location?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage, location },
} = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {heroImage && <img src={heroImage} alt={title} class="w-full mb-6" />}
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      {
        pubDate && (
          <div class="text-right font-bold text-base">
            <time>{pubDate}</time>
          </div>
        )
      }
      {
        updatedDate && (
          <div class="text-right font-bold text-base">
            更新于 <time>{updatedDate}</time>
          </div>
        )
      }
      {location && <div class="text-right font-bold text-base">{location}</div>}
      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
  <!-- 评论系统 -->
  <script is:inline src="//unpkg.com/valine/dist/Valine.min.js"></script>
  <div id="vcomments"></div>
  <script>
    new Valine({
      el: "#vcomments",
      appId: "qnPlNPXR7mRtINtFAaKmqtve-gzGzoHsz",
      appKey: "O9uUPIazfGIDoeVlHJaW47fi",
    });
  </script>
</BaseLayout>
