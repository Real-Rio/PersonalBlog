---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const posts = (await Astro.glob("./blog/*.{md,mdx}")).sort((a, b) => {
  var aDate = new Date(a.frontmatter.pubDate).valueOf();
  var bDate = new Date(b.frontmatter.pubDate).valueOf();
  if (a.frontmatter.updatedDate)
    aDate = Math.max(new Date(a.frontmatter.updatedDate).valueOf(), aDate);
  if (b.frontmatter.updatedDate)
    bDate = Math.max(new Date(b.frontmatter.updatedDate).valueOf(), bDate);
  return bDate - aDate;
});
const photos = (await Astro.glob("./photos/*.{md,mdx}")).sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).valueOf() -
    new Date(a.frontmatter.pubDate).valueOf(),
);
const last_photos = photos.slice(0, 3);
const last_posts = posts.slice(0, 3);
